set hintchars=asdfghjklweruiocm

noremap j 3j
noremap k 3k

hi Hint <<EOM
	background-color: #ffffff;
	border-color: #2f5f9f;
	border-radius: 4px;
	border-style: solid;
	border-width: 1px;
	box-shadow: 0px 0px 5px 0px rgba(0,0,0,.6);
	color: #2f5f9f;
	font-family: monospace;
	font-size: 14px;
	font-weight: normal;
	padding: 0px 3px;
	text-transform: uppercase;
EOM

hi HintActive <<EOM
	background-color: #5cb85c;
	color: #ffffff;
EOM

hi HintElem "
