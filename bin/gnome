#!/usr/bin/env bash

# For supported keys see: /usr/share/themes/Emacs/gtk-3.0/gtk-keys.css
x-cmd "gsettings set org.gnome.desktop.interface gtk-key-theme \"Emacs\""

x-cmd "gsettings set org.gnome.desktop.input-sources xkb-options \"['ctrl:swap_rwin_rctl', 'ctrl:nocaps', 'compose:menu']\""
x-cmd "gsettings set org.gnome.settings-daemon.plugins.media-keys next \"['AudioNext']\""
x-cmd "gsettings set org.gnome.settings-daemon.plugins.media-keys play \"['AudioPlay']\""
x-cmd "gsettings set org.gnome.settings-daemon.plugins.media-keys previous \"['AudioPrev']\""
x-cmd "gsettings set org.gnome.settings-daemon.plugins.media-keys volume-down \"['AudioLowerVolume']\""
x-cmd "gsettings set org.gnome.settings-daemon.plugins.media-keys volume-mute \"['AudioMute']\""
x-cmd "gsettings set org.gnome.settings-daemon.plugins.media-keys volume-up \"['AudioRaiseVolume']\""
